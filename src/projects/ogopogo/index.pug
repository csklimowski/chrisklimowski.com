extends ../../templates/project

block head
    title OGOPOGO: a game about palindromes
    link(rel="stylesheet", href="ogopogo.css")

block body
    header
        div.ogopogo-letters
            img(src="o.png", class="o1" alt="letter o")
            img(src="g.png", class="g2" alt="letter g")
            img(src="o.png", class="o3" alt="letter o")
            img(src="p.png", class="p4" alt="letter p")
            img(src="o.png", class="o5" alt="letter o")
            img(src="g.png", class="g6" alt="letter g")
            img(src="o.png", class="o7" alt="letter o")
        //- p.subtitle a game about palindromes
        div.video-wrapper
            <iframe width="560" height="315" src="https://www.youtube.com/embed/LnqJ3VB_6FE" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

    main
        div.content
            
            //- p.centered
            //-     a.ogopogo-game-link(href="game")
            //-         | Try OGOPOGO Classic<br><span class="small">(Chrome recommended)</span>
            p.
                OGOPOGO is a game about searching for lake monsters by making palindromes. Compete for high scores and discover new gameplay twists as you explore the depths of this curious new puzzle mechanic.
            p.centered
                a.ogopogo-game-link(href="https://store.steampowered.com/app/1595020/").
