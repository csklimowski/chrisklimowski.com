extends ../../templates/project

block head
    title Cave Generator
    script(src='/lib/phaser.min.js')
    script(src='generator.js')

block body
    header
        h1 Cave Generator
    section#content
        div.options
            label Size:
            input(type='text', value='100')#size
            button(onclick='generate()') Generate!
            | &nbsp; &nbsp;
            br
            button(onclick='newColors()') Change Colors
        div.game-wrapper
            div#game
    style.
        .options {
            text-align: center;
            font-size: 20px;
        }
        label, input, button {
            margin: 5px;
            padding: 5px;
        }
        input {
            max-width: 80px;
        }
        .game-wrapper div {
            max-height: 500px;
            max-width: 5000px;
        }
        @media screen and (min-width: 500px) {
            .options br {
                display: none;
            }
        }

